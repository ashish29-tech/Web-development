<%-include('../partials/header')%>
<%-include('../partials/navbar')%>


<div class="row" style="margin-top: 80px;">
    <div class="col-6 mx-auto">
        <h1 class="display-6">Sign-up Form</h1>

        <form action="/register" method="POST"> <!-- jab signup pe click karega toh DB m aa jana chahiye...so DB m changes hote hai to POST request and /register path pe hi kara rahe hai. -->
            <div class="mb-3">
                <label for="username" class="form-label">Username: </label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Name of User" required>
            </div>
            <div class="mb-3">
                <label for="mail" class="form-label">Email: </label>
                <input type="email" class="form-control" name="email" id="mail" placeholder="Email of the user" required>
            </div>
            <div class="mb-3">
                <label for="gender" class="form-label">Gender: </label>
                <input type="text" class="form-control" name="gender" id="gender" placeholder="gender of the user" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input type="password" class="form-control" name="password" id="password" placeholder="password of the user" required>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Signup</button> <!-- sign up pe click karte hi DB m aa jana chahiye -->
            <p class="mt-2">already have an account? <a href="/login">Login now</a></p>
        </form>
    </div>
</div>


<script src="/js/script.js"></script>
<%-include('../partials/footer')%>